<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use App\Models\SensorType;

class SensorTypeController extends Controller
{
    public function index()
    {
        $sensorTypes = SensorType::all();
        return view('sensor_types.index', compact('sensorTypes'));
    }

    public function create()
    {
        return view('sensor_types.create');
    }

    public function store(Request $request)
    {
        $request->validate([
            'title' => 'required|string',
            'details' => 'required|string',
            'unity' => 'required|string',
        ]);

        SensorType::create($request->all());

        return redirect()->route('sensor_types.index')
            ->with('success', 'Sensor type created successfully');
    }

    public function show(SensorType $sensorType)
    {
        return view('sensor_types.show', compact('sensorType'));
    }

    public function edit(SensorType $sensorType)
    {
        return view('sensor_types.edit', compact('sensorType'));
    }

    public function update(Request $request, SensorType $sensorType)
    {
        $request->validate([
            'title' => 'required|string',
            'details' => 'required|string',
            'unity' => 'required|string',
        ]);

        $sensorType->update($request->all());

        return redirect()->route('sensor_types.index')
            ->with('success', 'Sensor type updated successfully');
    }

    public function destroy(SensorType $sensorType)
    {
        $sensorType->delete();

        return redirect()->route('sensor_types.index')
            ->with('success', 'Sensor type deleted successfully');
    }
}
